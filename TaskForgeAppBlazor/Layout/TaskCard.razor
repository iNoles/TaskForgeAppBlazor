<div class="card h-100">
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title">@Task.Title</h5>
                <p class="card-text">@Task.Description</p>
            </div>
            <div class="priority-dot @PriorityClass(Task.Priority)"></div>
        </div>

        <div class="mt-auto d-flex justify-content-between align-items-center">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" checked="@Task.IsCompleted" @onchange="()=>OnToggleComplete.InvokeAsync(Task)" />
            </div>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary" @onclick="()=>OnEdit.InvokeAsync(Task)">Edit</button>
                <button class="btn btn-sm btn-outline-danger" @onclick="()=>OnDelete.InvokeAsync(Task)">Delete</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public TaskItem Task { get; set; } = default!;
    [Parameter] public EventCallback<TaskItem> OnEdit { get; set; }
    [Parameter] public EventCallback<TaskItem> OnDelete { get; set; }
    [Parameter] public EventCallback<TaskItem> OnToggleComplete { get; set; }

    private string PriorityClass(int p) => p switch
    {
        0 => "bg-success",
        1 => "bg-warning",
        2 => "bg-danger",
        _ => "bg-secondary"
    };
}
